@model Versta.Models.Order

@{
ViewData["Title"] = "GetById";
}

<h1>Подробности заказа</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            Номер заказа:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.id)
        </dd>
        <dt class="col-sm-2">
            Город отправителя:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CitySender)
        </dd>
        <dt class="col-sm-2">
            Адрес отправителя:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AddressSender)
        </dd>
        <dt class="col-sm-2">
            Город получателя:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.CityRecipient)
        </dd>
        <dt class="col-sm-2">
            Адрес получателя:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.AddressRecipient)
        </dd>
        <dt class="col-sm-2">
            Вес груза:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Weight)
        </dd>
        <dt class="col-sm-2">
            Дата отправки:
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.DateTime)
        </dd>
    </dl>
</div>
